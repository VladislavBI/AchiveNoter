<Window x:Class="AchiveNoter.AchieveName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AchieveName" Height="150" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>
        <Label HorizontalAlignment="Center"   Content="Новое достижение " VerticalAlignment="Center" Grid.ColumnSpan="2" FontSize="20"/>
        <Label Content="Ваше достижение:" HorizontalAlignment="Center"  Grid.Row="1" VerticalAlignment="Center" FontSize="16"/>
        <TextBox Name="TextBoxName" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" FontSize="16" Margin="5"/>
        <Button Name="ButtonAdd" Content="Добавить" HorizontalAlignment="Center"  Grid.Row="2" VerticalAlignment="Center" Width="75" Height="25" Click="ButtonAdd_Click" IsDefault="True"/>
        <Button Name="ButtonBack" Content="Отменить" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,40,0" Grid.Row="2" VerticalAlignment="Center" Width="75" Height="25" Click="ButtonBack_Click"/>

    </Grid>
</Window>
